<% layout("/layouts/boilerplate.ejs") %>
    <div class="row">
        <div class="col-8 offset-3">
            <h3 class="mt-3"><%=listing.title%></h3>
        </div>

        <div class="card col-6 offset-3 show-card listing-card">
            <img src=<%=listing.image %> class="card-img-top show-img" alt="...">
            <div class="card-body">
                <p class="card-text">
                    <%=listing.description%> <br><br>
                    <b style="font-weight: 500;">Price:</b>&#8377;<%=listing.price.toLocaleString("en-IN")%> <br>
                    <b style="font-weight: 500;">Location:</b> <%=listing.location%> <br>
                    <b style="font-weight: 500;">Country:</b> <%=listing.country%>
                </p>
            </div>
        </div>
        <br>
        
    
            <div class="btns">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete</button>
                </form>
            </div>
    
        
        
            
            